mode_initial:
    {
        d_scanner.reset(StartCondition__::INITIAL);
    }
;

mode_block:
    action_m
    {
        d_scanner.reset(StartCondition__::mblock);
    }
;

mode_pattern:
    regex_m
    {
        modePattern();
    }
;

mode_patterntxt:
    {
        d_scanner.reset(StartCondition__::patterntxt);
    }
;

