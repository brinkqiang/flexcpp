void install(string where, int all)
{
    list pages;
    string page;
    int idx;

    printf("  installing the executable\n");
    md(where + BIN);
    run("cp tmp/bin/* " + where + BIN);

    printf("  installing the skeleton files\n");
    md(where + SKEL);
    run("cp skeletons/* " + where + SKEL);

    if (all)
    {
        md(where + MAN);
        md(where + DOC + "/man");

        printf("  installing the manual pages\n");
        chdir("tmp/man");
        pages = makelist("*");

        for (idx = sizeof(pages); idx--; )
        {
            page = pages[idx];
            run("gzip -9 < page > " + where + MAN + "/" + page + ".gz");
        }

        chdir("../manhtml");
        pages = makelist("*");

        for (idx = sizeof(pages); idx--; )
        {
            page = pages[idx];
            run("cp " + page + " " + where + DOC + "/man");
        }

        chdir("../..");

        printf("  installing the information directly in and under $DOC\n");
        run("gzip -9 < changelog > " + where + DOC + "/changelog.gz");
    
        // printf("  installing flex's docs\n");
        // md(where + DOC + "/flex-docs");
        // run("cp -r documentation/html documentation/flex.ps.org " + 
        //                                 where + DOC + "/flex-docs");
        
        // printf("  installing examples\n");
        // md(where + DOC + "/examples");
        // run("cp -r documentation/examples " + where + DOC);
        // run("cp -r documentation/regression " + where + DOC);
    
        printf("  installing manual\n");
        run("cp -r tmp/manual " + where + DOC);
    }

    printf("  Installation completed\n");

    exit(0);
}




