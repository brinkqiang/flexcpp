string remove1;
string remove2;
string remove3;

void setRemovals()
{
    // always:
        remove1 = 
            "build-stamp configure-stamp "
            "flexc++ o */o release.yo libflexc++.a scanner/yylex.cc "
            "parser/parse.cc parser/parserbase.h parser/grammar.output";

    // dist:
        remove2 =
            "tmp";

    // in ./documentation:
        remove3 = "man/*.1 man/*.html manual/manual-stamp manual/*.html "
                  "manual/invoking/usage flexc++ usage/usage";
}

void clean(int dist)
{
    setRemovals();

    run("rm -rf " + remove1);

    if (dist)
    {
        run("rm -rf " + remove2);
    }

    chdir("../documentation");
    run("rm -rf " + remove3);


    exit(0);
}




