%class-name Parser

%filenames parser
%parsefun-source parse.cc
%scanner ../scanner/scanner.h
%print                      d_scanner.matched()
%scanner-token-function     d_scanner.lex()
%debug

%baseclass-preinclude preinclude.h

%stype spSemUnion

// definition section
%token  EXCL_START_CONDITION
        INCL_START_CONDITION
        SECTION_DELIMITER

// options
%token  BASECLASSHEADER
        CLASSHEADER
        CLASSNAME
        DEBUG
        IMPLEMENTATIONHEADER
        INPUTIMPLEMENTATION
        INPUTINTERFACE
        INTERACTIVE
        LEXFUNCTIONNAME
        LEXSOURCE
        NAMESPACE
        NOLINES
        SKELETON_DIRECTORY
 
// rules
%token  BLOCK
        IDENTIFIER
        EOF_PATTERN
        STRING
        QUOTES
        DECIMAL
        DOLLAR
        ESCAPE_SEQUENCE
        CC_START
        CC_NEGATED
 
// character classes
%token  PREDEFINED_CLASS

// Pattern operators:

//  lowest precedence
%left       ORNL
%nonassoc   '/'
%left       '|'
%left       CHAR 
%nonassoc   '{'
%left       CC_PLUS CC_MINUS
 
//  highest precedence

%%

input:
    opt_directives          // in inc/directives; options in inc/options
    section_delimiter
    rules
;

section_delimiter:
    SECTION_DELIMITER   '\n'
    {
        d_rules.useInitialSC();
    }
;

identifier:
    IDENTIFIER
    {
        $$ = spSemUnion(d_matched);
    }
;

%include inc/directives
%include inc/options

%include inc/combichars
%include inc/msspec
%include inc/characterclass
%include inc/regex
%include inc/block
%include inc/eofpattern
%include inc/reset
%include inc/mscompound
%include inc/optmsrule
%include inc/rules
 
