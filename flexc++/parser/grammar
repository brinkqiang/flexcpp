%class-name Parser

%filenames parser
%parsefun-source parse.cc
%scanner ../scanner/scanner.h
%print                      d_scanner.matched()
%scanner-token-function     d_scanner.lex()
%debug

%baseclass-preinclude preinclude.h

%stype spSemUnion

// definition section
%token  EXCL_START_CONDITION
        INCL_START_CONDITION
        SECTION_DELIMITER

// options
%token  BASECLASSHEADER
        CLASSHEADER
        CLASSNAME
        DEBUG
        DEBUG_STEPS
        IMPLEMENTATIONHEADER
        INPUTIMPLEMENTATION
        INPUTINTERFACE
        INTERACTIVE
        LEXFUNCTIONNAME
        LEXSOURCE
        NAMESPACE
        NOLINES
        SKELETON_DIRECTORY
 
// rules
%token  BLOCK
        IDENTIFIER
        EOF_PATTERN
        STRING
        DECIMAL
        ESCAPE_SEQUENCE
        CC_START
        CC_NEGATED
 
// character classes
%token  PREDEFINED_CLASS
 
// Pattern operators:

//  lowest precedence
%left       ORNL
%nonassoc   '/'
%left       '|'
%left       CHAR 
%left       CC_PLUS CC_MINUS
//  highest precedence

%%

input:
    opt_directives          // in inc/directives; options in inc/options
    SECTION_DELIMITER
    rules
;

identifier:
    IDENTIFIER
    {
        $$.reset(new SemUnion(d_matched));
    }
;

%include inc/directives
%include inc/options
%include inc/rules
 
