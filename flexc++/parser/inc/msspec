_ms_name:
    identifier
    {
        d_rules.activateStartCondition($1);
    }
;

_ms_name_list:
    _ms_name_list ',' _ms_name
|
    _ms_name
;

_ms_specs:
    '*'
    {   // following <*> all mini scanners apply
        d_rules.useAll();
    }    
|
    _ms_name_list
;

_ms_angular:
    '<'
    {
        d_scanner.acceptIdentifier();
    }
;

ms_spec:
    _ms_angular _ms_specs '>' reset
;

